{
  "name": "chatclient",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack peer-to-peer aware Discord-like chat client",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "start": "npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BlackJax96/ChatClientAWS.git"
  },
  "author": "ChatClient Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BlackJax96/ChatClientAWS/issues"
  },
  "homepage": "https://github.com/BlackJax96/ChatClientAWS#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
